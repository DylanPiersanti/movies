{% extends 'base.html.twig' %}

{% block title %}aaa
{% endblock %}

{% block body %}

    <style>
        body {
            background-color: #000;
        }
        
    </style>

    <div class="video">
        <a href="https://awards.allocine.fr/">
            <img src="https://tpc.googlesyndication.com/pagead/imgad?id=CICAgKCnhfWbDhABGAEyCAGHxnuw94oB" width="1700px"/>
        </a>
    </div>

    <div class="app container">
        <div class="row mt-5">
            <div class="col-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img src="http://fr.web.img6.acsta.net/carousels/19/12/31/10/41/5376380.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                        <img src="http://fr.web.img5.acsta.net/carousels/20/01/05/22/03/5013869.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                        <img src="http://fr.web.img2.acsta.net/carousels/19/12/20/16/01/1565598.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            {% for author in authorsList %}
                <div class="col-4">
                    <div class="card mt-5">
                        <h3 class="movieName card-header text-center">{{author.name}}</h3>
                        
                        
                            <img alt="Couverture : {{author.name}}" src="{{author.photo}}" style="height: 450px; width: 100%; display: block;">
                            <ul class="list-group list-group-flush">
                            
                            <li class="list-group-item">Né(e) le : {{ author.birthday|date('d/m/Y') }}</li>
                            {% if author.nationality %}
                                <li class="list-group-item">Nationalité : {{ author.nationality }}</li>
                            {% else %}
                                <li class="list-group-item">Nationalité : non-reférencé</li>
                            {% endif %}
                            </ul>
                        <div class="card-body text-center">
                            <a class="card-link btn btn-success" href="{{ author.link }}">Voir sur Allociné</a>
                            <a class="card-link btn btn-primary" href="author/{{ author.id }}">Fiche complète</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                {{ knp_pagination_render(authorsList) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
